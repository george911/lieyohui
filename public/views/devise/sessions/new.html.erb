<!--登陆界面-->
            <div class="container" style='padding-top:80px'>
                <div class="row vertical-offset-100">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">                                
                                <div class="row-fluid user-row">
                                    <img src="http://s11.postimg.org/7kzgji28v/logo_sm_2_mr_1.png" class="img-responsive" alt="Conxole Admin"/>
                                </div>
                            </div>
                            <div class="panel-body">
                            	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                <form accept-charset="UTF-8" role="form" class="form-signin">
                                    <fieldset>
                                        <label class="panel-login">
                                            <div class="login_result"></div>
                                        </label>
                                        
                                        <div>
  											<%= f.email_field :email, class:'form-control', style:'margin-bottom:20px',placeholder:'邮箱',autofocus: true %></div>

                                        <div>
    										<%= f.password_field :password, class:'form-control',placeholder:'密码',autocomplete: "off",style:'margin-bottom:10px' %></div>

    									<% if devise_mapping.rememberable? %>
									    <div><%= f.check_box :remember_me %>
									    	<%= f.label :'记住我',style:'margin-bottom:10px' %>
									    </div>
								<% end -%>
                                        
                                        <div><%= f.submit "登录",class:'btn btn-lg btn-success btn-block',style:'margin-bottom:10px' %></div>
                                    </fieldset>
                                    <% end %>

                                      <%= render "devise/shared/links" %>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



  

  

  

  

